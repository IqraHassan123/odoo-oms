<odoo>
    <record id="view_announcment_form" model="ir.ui.view">
        <field name="name">announcment.form</field>
        <field name="model">oms.announcement</field>
        <field name="arch" type="xml">
            <form string="Announcment">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="is_active" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_announcment_tree" model="ir.ui.view">
        <field name="name">announcment.tree</field>
        <field name="model">oms.announcement</field>
        <field name="arch" type="xml">
            <list string="Announcment">
                <field name="name"/>
                <field name="description"/>
                <field name="is_active" />
            </list>
        </field>
    </record>
</odoo>