<templates xml:space="preserve">
    <t t-name="custom.oms.hero" owl="1">
        <div
        class="ant-card ant-card-bordered"
        style="
          border-radius: 12px;
          box-shadow: rgba(0, 0, 0, 0.25) 1px 1px 10px;
          margin-bottom: 20px;
